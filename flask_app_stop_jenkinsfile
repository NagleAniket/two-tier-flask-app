pipeline {
    agent { label 'jenkins_slave' }

    environment {
        UID = '1000'
        GID = '1000'
    }

    stages {
        stage("Checkout Code") {
            steps {
                checkout scm
            }
        }

        stage("Verify Files") {
            steps {
                sh 'pwd'  // Print the working directory
                sh 'ls -l'  // List files to ensure docker-compose.yml is present
            }
        }

        stage("Docker Stop") {
            steps {
                sh 'docker compose -f docker-compose.yml down'
            }
        }
    }
}
